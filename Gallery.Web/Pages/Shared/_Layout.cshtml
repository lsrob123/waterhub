<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData[Constants.PageTitle]</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="header">
        <div class="page-title">
            @RenderSection(Constants.PageHeader, false)
        </div>
    </div>
    <div class="content">
        @RenderBody()
    </div>
    <div class="footer">

    </div>

    <script src="~/js/api-call-result.js" asp-append-version="true"></script>
    <script src="~/js/settings.js" asp-append-version="true"></script>
    <script src="~/js/service.js" asp-append-version="true"></script>
    <script src="~/js/album.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
